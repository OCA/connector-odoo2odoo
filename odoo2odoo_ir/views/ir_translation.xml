<openerp>
<data>

<record id="view_translation_form" model="ir.ui.view">
    <field name="name">ir.translation.form.inherit</field>
    <field name="model">ir.translation</field>
    <field name="inherit_id" ref="base.view_translation_form"/>
    <field name="arch" type="xml">
        <xpath expr="/form/sheet" position="inside">
            <group name="odoo2odoo" string="Odoo2Odoo">
                <field name="odoo_bind_ids" nolabel="1"/>
            </group>
        </xpath>
    </field>
</record>

<record id="odoo_ir_translation_view_tree" model="ir.ui.view">
    <field name="name">odoo.ir.translation.tree</field>
    <field name="model">odoo.ir.translation</field>
    <field name="arch" type="xml">
        <tree string="Odoo2Odoo Bindings">
            <field name="backend_id"/>
            <field name="odoo_id"/>
            <field name="external_odoo_id"/>
            <field name="sync_date"/>
        </tree>
    </field>
</record>

</data>
</openerp>
