<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_partner_connector_form" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="connector.view_partner_connector_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='connector']" position="attributes">
                <attribute name="invisible" eval="0" />
            </xpath>
            <xpath expr="//notebook/page[@name='connector']" position="inside">
                <group string="Odoo Bindings">
                    <field name="bind_ids" readonly="1" nolabel="1" colspan="2"/>
                </group>
            </xpath>
            <xpath expr="//notebook/page[@name='connector']" position="inside">
                <group string="Odoo Bindings (Address Dissapeared)">
                    <field
                        name="bind_address_dissapeared_ids"
                        readonly="1"
                        nolabel="1"
                        colspan="2"
                    />
                </group>
            </xpath>
        </field>
    </record>

    <record id="odoo_res_partner_tree_view" model="ir.ui.view">
        <field name="name">odoo.res.partner.tree</field>
        <field name="model">odoo.res.partner</field>

        <field name="arch" type="xml">
            <tree>
                <field name="display_name" />
                <field name="odoo_id" />
                <field name="backend_id" />
                <field name="external_id" />
                <button name="resync" type="object" string="Resync" />
            </tree>
        </field>
    </record>

    <record id="odoo_res_partner_form_view" model="ir.ui.view">
        <field name="name">odoo.res.partner.form</field>
        <field name="model">odoo.res.partner</field>

        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="resync" type="object" string="Resync" />
                </header>
                <sheet>

                    <div class="oe_title">

                        <h1>
                            <field name="name" readonly="1" />
                        </h1>
                        <group>
                            <field name="odoo_id" readonly="0" />
                            <field name="backend_id" readonly="1" />
                            <field name="external_id" readonly="0" />
                        </group>
                    </div>
                </sheet>

            </form>
        </field>
    </record>

    <record id="odoo_res_partner_address_disappeared_tree_view" model="ir.ui.view">
        <field name="name">odoo.res.partner.address.disappeared.tree</field>
        <field name="model">odoo.res.partner.address.disappeared</field>

        <field name="arch" type="xml">
            <tree>
                <field name="display_name" />
                <field name="odoo_id" />
                <field name="backend_id" />
                <field name="external_id" />
                <button name="resync" type="object" string="Resync" />
            </tree>
        </field>
    </record>

    <record id="odoo_res_partner_address_disappeared_form_view" model="ir.ui.view">
        <field name="name">odoo.res.partner.address.disappeared.form</field>
        <field name="model">odoo.res.partner.address.disappeared</field>

        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="resync" type="object" string="Resync" />
                </header>
                <sheet>

                    <div class="oe_title">

                        <h1>
                            <field name="name" readonly="1" />
                        </h1>
                        <group>
                            <field name="odoo_id" readonly="0" />
                            <field name="backend_id" readonly="1" />
                            <field name="external_id" readonly="0" />
                        </group>
                    </div>
                </sheet>

            </form>
        </field>
    </record>

</odoo>
